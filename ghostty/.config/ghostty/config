
# ghostty +list-themes
theme = Arcoiris

font-size = 14
font-family = 'Hack Nerd Font Mono'
font-thicken

mouse-hide-while-typing

wait-after-command = true

# Scrollback (equivalent to wezterm's 9999999 lines)
scrollback-limit = 9999999

# Key bindings (leader key pattern: ctrl+w)
# Split panes
keybind = ctrl+w>shift+backslash=new_split:right
keybind = ctrl+w>minus=new_split:down

# Navigate panes (vim-style)
keybind = ctrl+w>h=goto_split:left
keybind = ctrl+w>j=goto_split:bottom
keybind = ctrl+w>k=goto_split:top
keybind = ctrl+w>l=goto_split:right
